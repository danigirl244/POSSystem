<Window x:Class="pointofsale_application.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pointofsale_application"
        mc:Ignorable="d"
        Title="Jurassic Bar" HorizontalAlignment="Center" Height="700" Width="1050"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#787A79">
        <DockPanel VerticalAlignment="Top" Height="85">
            <Image Name="TopLeftLogo" Source="Images\jurassic bar2.png" Height="85" HorizontalAlignment="Left" VerticalAlignment="Top" />
        </DockPanel>
        <Label Height="42" VerticalAlignment="Top" Content="Home Page" Margin="190,20,716,0" FontSize="23" Foreground="White"/>
        <Button Name="LogoutButton" Width="136" Height="44" FontSize="20" VerticalAlignment="Center" Content="Logout" HorizontalAlignment="Right" Margin="0,21,16,606" Click="LogoutButton_Click"/>
        <Button Name="ReportsButton" Width="136" Height="44" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,21,156,606" Click="ReportsButton_Click">Reports</Button>
        <Button Name="UsersButton" Width="136" Height="44" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,21,296,606" Click="UsersButton_Click">Edit Users</Button>
        <Button Name="InventoryButton" Width="136" Height="44" FontSize="20
                " VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,21,436,606" Click="InventoryButton_Click">Edit Inventory</Button>
        <StackPanel Width="130" HorizontalAlignment="Left" Background="#787A79" Margin="0,90,0,0" x:Name="CategoryColumn">
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="130,85,307,5">
            <Grid  ShowGridLines="True" x:Name="ItemGrid" Width="578" Height="1754">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
        <DockPanel Margin="742,85,0,89" Background="White">
            <StackPanel Orientation="Vertical" Background="White" Height="500" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Height="20" VerticalAlignment="Top" Background="White" HorizontalAlignment="Center" Margin="10, 0, 0, 0" FontWeight="Bold">Order Number:</TextBlock>
                    <TextBlock Name="OrderNumberBlock" Height="20" VerticalAlignment="Top" Background="White" HorizontalAlignment="Center" Margin="10, 0, 0, 0">XXX</TextBlock>
                </StackPanel>
                <TextBlock Background="White" Height="50" Width="120"  VerticalAlignment="Top" TextAlignment="Center" HorizontalAlignment="Center">Jurassic Bar<LineBreak/>143 South Main<LineBreak/>SLC, UT 84111</TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="10,10,0,0"><Bold>Cashier:</Bold></TextBlock>
                    <TextBlock Name="CashierTransactionField" Margin="10,10,0,0">Temp Cashier</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="10,0, 0, 0"><Bold>Date:</Bold></TextBlock>
                    <TextBlock Name="DateTimeTransactionField" Margin="10,0, 0, 0">Temp Date/Time</TextBlock>
                </StackPanel>
                <ScrollViewer CanContentScroll="True">
                    <StackPanel Name="TransactionBlock" Background="White" HorizontalAlignment="Right" Width="281" Height="230" Margin="10">
                    </StackPanel>
                </ScrollViewer>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Margin="0,0,10,0" HorizontalAlignment="Right"><Bold>Subtotal:</Bold></TextBlock>
                    <TextBlock Name="SubtotalTransactionField" Margin="0,0,20,0" HorizontalAlignment="Right"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Margin="0, 0, 10, 0" HorizontalAlignment="Right"><Bold>Tax:</Bold></TextBlock>
                    <TextBlock Name="TaxTransactionField" Margin="0,0, 20, 0" HorizontalAlignment="Right"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Margin="0, 0, 10, 0" HorizontalAlignment="Right"><Bold>Total:</Bold></TextBlock>
                    <TextBlock Name="TotalTransactionField" Margin="0, 0, 20, 0" HorizontalAlignment="Right"></TextBlock>
                </StackPanel>
            </StackPanel>
        </DockPanel>
        <Button Name="CashoutButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="25" Width="275" Padding="10" Margin="0,0,12,14" Click="CashoutButton_Click">Checkout</Button>
    </Grid>
</Window>

