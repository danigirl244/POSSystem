<Window x:Class="pointofsale_application.PromotePopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pointofsale_application"
        mc:Ignorable="d"
        Title="PromotePopUp" Height="173.11" Width="300">
    <Grid Background="#787A79">
        <Label x:Name="PromotePrompt" Content="Are you sure you want to promote/demote?" HorizontalAlignment="Left" Margin="27,28,0,0" VerticalAlignment="Top" Height="29"/>
        <Button x:Name="YButton" Content="Yes" HorizontalAlignment="Left" Margin="59,85,0,0" VerticalAlignment="Top" Width="75" Background="#464543"/>
        <Button x:Name="NButton" Content="No" HorizontalAlignment="Left" Margin="166,85,0,0" VerticalAlignment="Top" Width="75" Background="#464543"/>

    </Grid>
</Window>
