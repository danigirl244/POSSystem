<Window x:Class="pointofsale_application.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pointofsale_application"
        mc:Ignorable="d"
        Title="Window1" Height="600" Width="950">
    <Grid Background="#787A79">
        <Button x:Name="AddNew" Height="53" Width="150" Margin="348,35,35,247" VerticalAlignment="Top" HorizontalAlignment="Right" Background="#464543" Content="Add Product" Foreground="#B1B7B7" FontSize="18"></Button>
        <StackPanel>
            <TabControl x:Name="Products" TabStripPlacement="Left" Margin="0,120,0,0" Height="450">
                <TabItem Header="Beer"/>
                <TabItem Header="Vodka"/>
                <TabItem Header="Whiskey"/>
                <TabItem Header="Wine"/>
                <TabItem Header="Gin"/>
                <TabItem Header="Tequila"/>
                <TabItem Header="Rum"/>
                <TabItem Header="Other Drinks"/>
                <TabItem Header="Fossils"/>
            </TabControl>
        </StackPanel>
        
    </Grid>
</Window>
